@page "/babbage-attack"
@inherits ReactiveUI.Blazor.ReactiveComponentBase<BabbageViewModel>

<MudContainer>
    <MudText Typo="Typo.h3" GutterBottom="true">Babbage Attack</MudText>

    <MudItem xs="12" sm="6" md="4">
        <MudNumericField @bind-Value="ViewModel!.MaxKeyLen" Label="Maximum Key Lenght" Variant="Variant.Text" Min="0" Max="100"/>
    </MudItem>

    
    <MudItem xs="12" sm="12" md="12" Style="margin: 15px 0;">
        <MudButton @onclick="ViewModel!.Reset" Variant="Variant.Filled">Reset</MudButton>
        <MudButton @onclick="ViewModel!.Decrypt" Variant="Variant.Filled">Decrypt</MudButton>
    </MudItem>

    <MudGrid>
        <MudItem xs="12" sm="6" md="6">
            <MudTextField T="string" @bind-Value="ViewModel!.InputText" Label="Input" Variant="Variant.Outlined" Lines="10"/>
        </MudItem>
        <MudItem xs="12" sm="6" md="6">
            <MudTextField T="string" @bind-Value="ViewModel!.OutputText" Label="Output" Variant="Variant.Outlined" Lines="10"/>
        </MudItem>
    </MudGrid>
</MudContainer>