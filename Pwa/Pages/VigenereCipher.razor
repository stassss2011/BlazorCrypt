@page "/vigenere-cipher"
@inherits ReactiveUI.Blazor.ReactiveComponentBase<VigenereViewModel>

<MudContainer>
    <MudText Typo="Typo.h3" GutterBottom="true">Vigenere Cipher</MudText>
    <MudItem xs="12" sm="6" md="4">
        <MudTextField @bind-Value="ViewModel!.Key" Label="Key" Variant="Variant.Text"/>
    </MudItem>

    <MudItem xs="12" sm="12" md="8">
        <MudTextField @bind-Value="ViewModel!.Alphabet" Label="Alphabet" Variant="Variant.Text"/>
    </MudItem>


    <MudItem xs="12" sm="12" md="12" Style="margin: 15px 0">
        <MudButton @onclick="ViewModel!.Reset" Variant="Variant.Filled">Reset</MudButton>
        <MudButton @onclick="ViewModel!.Encrypt" Variant="Variant.Filled">Encrypt</MudButton>
        <MudButton @onclick="ViewModel!.Decrypt" Variant="Variant.Filled">Decrypt</MudButton>
    </MudItem>


    <MudGrid>
        <MudItem xs="12" sm="6" md="6">
            <MudTextField T="string" @bind-Value="ViewModel!.InputText" Label="Input" Variant="Variant.Outlined" Lines="10"/>
        </MudItem>
        <MudItem xs="12" sm="6" md="6">
            <MudTextField T="string" @bind-Value="ViewModel!.OutputText" Label="Output" Variant="Variant.Outlined" Lines="10"/>
        </MudItem>
    </MudGrid>
</MudContainer>